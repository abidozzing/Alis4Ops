@page "/datetime"
@using System.Timers
@using System

<div class="row d-flex gx-0" style="font-size: 38%;">
    <div class="col">
        @currentDateTime
    </div>
</div>

@code {
    private string currentDateTime => DateTime.Now.ToString("ddd dd MMM yyyy hh:mm tt");

    protected override void OnInitialized()
    {
        // Start a timer to update currentDateTime every second
        var updateTimer = new Timer(1000); // Update every 1000 milliseconds (1 second)
        updateTimer.Elapsed += UpdateTimerElapsed;
        updateTimer.AutoReset = true;
        updateTimer.Start();
    }

    private void UpdateTimerElapsed(object sender, ElapsedEventArgs e)
    {
        // Update currentDateTime every second
        InvokeAsync(() =>
        {
            StateHasChanged();
        });
    }
}
