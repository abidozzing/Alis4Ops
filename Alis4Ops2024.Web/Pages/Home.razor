@* @page "/" *@
@page "/home"
@using Alis4Ops2024.Web.Core
@using Alis4Ops2024.Web.Models
@using Alis4Ops2024.Web.Layout
@using Alis4Ops2024.Web.Pages
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager
@using Microsoft.AspNetCore.Components
<link href="css/site.css" rel="stylesheet" />
<link href="css/dropbutton.css" rel="stylesheet" />

<PageTitle>Home</PageTitle>

<div class="menu-block">
    <ul>
        <li><a href="#" @onclick="@(() => NavigateToMain("Add"))" class="@GetMenuItemClass("Add")">Add</a></li>
        <li><a href="#" @onclick="@(() => NavigateToMain("Subtract"))" class="@GetMenuItemClass("Subtract")">Subtract</a></li>
        <li><a href="#" @onclick="@(() => NavigateToMain("Multiply"))" class="@GetMenuItemClass("Multiply")">Multiply</a></li>
        <li><a href="#" @onclick="@(() => NavigateToMain("Divide"))" class="@GetMenuItemClass("Divide")">Divide</a></li>
        <li><a href="#" @onclick="@(() => NavigateToMain("AddSubtract"))" class="@GetMenuItemClass("AddSubtract")">AddSubtract</a></li>
        <li><a href="#" @onclick="@(() => NavigateToMain("MultiplyDivide"))" class="@GetMenuItemClass("MultiplyDivide")">MultiplyDivide</a></li>
        <li><a href="#" @onclick="@(() => NavigateToMain("MixedFourOps"))" class="@GetMenuItemClass("MixedFourOps")">MixedFourOps</a></li>
        <!-- Add more links as needed -->
    </ul>
</div>

<!-- Main Content -->
<div class="main-content">
    @if (!string.IsNullOrEmpty(currentTopic))
    {
        <Main Topic="@currentTopic" />
    }
    else
    {
        <p><Main Topic="Add" /></p>
    }
</div>

@code {
    private string currentTopic;
    private string clickedMenuItem = "Add"; // Initialize with "Add" to highlight by default

    private void NavigateToMain(string topic)
    {
        currentTopic = topic;
        clickedMenuItem = topic; // Set clicked menu item
    }

    // Function to get CSS class based on clicked menu item
    private string GetMenuItemClass(string menuItem)
    {
        return menuItem == clickedMenuItem ? "active" : ""; // Apply 'active' class if menu item is clicked
    }
}

<style>
    .menu-block {
        background-color: #f0f0f0;
        padding: 10px;
        margin-bottom: 20px;
        font-size: 14px; /* Adjust font size as needed */
    }

        .menu-block ul {
            list-style-type: none;
            padding: 0;
            margin: 0;
        }

            .menu-block ul li {
                display: inline-block;
                margin-right: 10px;
            }

                .menu-block ul li a {
                    text-decoration: none;
                    color: #333;
                    font-weight: bold;
                    padding: 5px 10px;
                    border-radius: 5px;
                    background-color: #ddd;
                }

                    .menu-block ul li a:hover {
                        background-color: #ccc;
                    }

                    .menu-block ul li a.active {
                        background-color: darkgreen; /* Highlight color for active menu item */
                        color: white;
                    }

    .main-content {
        padding: 20px;
        border: 1px solid #ccc;
        background-color: #fff;
    }
</style>
