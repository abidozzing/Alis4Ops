@page "/longdivision"
@using Alis4Ops2024.Web.Core
@using Alis4Ops2024.Web.Models
@using Alis4Ops2024.Web.Layout
@using Microsoft.JSInterop
@inject IJSRuntime JSRuntime


@using Microsoft.AspNetCore.Components.Web

<h3>Long Division Example</h3>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-auto">
            <svg xmlns="http://www.w3.org/2000/svg" width="200" height="100">
                <!-- Horizontal line -->
                <line x1="50" y1="30" x2="150" y2="30" stroke="black" stroke-width="2" />

                <!-- Vertical line -->
                <line x1="100" y1="10" x2="100" y2="50" stroke="black" stroke-width="2" />

                <!-- Dot -->
                <circle cx="100" cy="30" r="4" fill="black" />

                <!-- Numerals -->
                <text x="30" y="25" font-size="20" text-anchor="end">42</text>
                <text x="120" y="50" font-size="20">7</text>
            </svg>
            <hr class="result" />
            <div class="result-number">6</div>
        </div>
    </div>
</div>

@code {
    // Optional code-behind logic can be added here
}

<style>
    .container {
        margin-top: 20px;
    }

    .result {
        border-top: 2px solid black;
        width: 100%;
        margin-top: 10px;
    }

    .result-number {
        font-size: 2rem;
        text-align: center;
        margin-top: 10px;
    }
</style>

